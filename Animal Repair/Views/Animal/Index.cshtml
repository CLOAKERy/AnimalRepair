@model IEnumerable<AnimalRepair.BLL.DTO.AnimalDTO>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a a class="nav-link text-dark" asp-action="Create" asp-controller="Animal">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenderName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.IdKindOfAnimalNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdOrderNavigation)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src= "@Url.Content(item.Picture)" height="40" width="100" alt="Картинка не найдена"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenderName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.IdKindOfAnimalNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOrderNavigation.Date)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
